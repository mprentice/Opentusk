$ttool = Apache::TicketTool->new($req_rec);
($res, $msg) = $ttool->verify_ticket($req_rec);

$user_id = $req_rec->connection->user;

if ($user_id){
	$li = HSDB4::SQLRow::LogItem->new();
	$li->save_loglist( [ $user_id, strftime("%Y-%m-%d %X", localtime), 'Logout-Reminder', undef, undef, undef ] );
}
