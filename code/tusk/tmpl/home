	</div>
%	$counter++;
% }
</%method>


<%method print_school_links>
<%args>
$school
</%args>

% my $links = $school->getHomepageSchoolLinks();

% if (scalar @$links) {
<ul class="gNoBullets">
%	foreach my $l (@$links) {
%		my $subLinks = $l->getJoinObjects('subLink'); 
%		if (scalar @$subLinks) {
<li class="closed"><h2><% $l->getLabel() %></h2><img src="/graphics/spacer.gif" class="more" alt="">
	<ul>
%			foreach my $sl (@$subLinks) {	
	<li><a href="<% $sl->getUrl() %>"><% $sl->getLabel() %></a></li>
%			}
	</ul>
</li>
%		}
%		else {
<li><a href="<% $l->getUrl() %>"><% $l->getLabel() %></a></li>
%		}
%	}
</ul>
% }
% else {
<em class="indented">no school links</em>
% }

</%method>


<%method school_announcements>
<%args>
	$user
</%args>
<%perl>
	my $all_announcements = $user->get_school_announcements();
</%perl>
% if (scalar @$all_announcements) {
<section class="notifications">
	<div class="close"><img src="/graphics/icon-home-close.png" alt=""></div>
	<div class="scrollcontainer">
%	foreach my $ann (@$all_announcements) {
		<article><% $ann->field_value('body') %></article>
% }
	</div>
</section>	
% }
</%method>


<%doc>
method to print the user's recently viewed content 
</%doc>
<%method recently_viewed>
<%args>
	$user
</%args>
<%perl>
my @recent_content = $user->available_recent_history;
</%perl>
% if(scalar @recent_content){
<ul>
%	foreach my $c (@recent_content){
%		if ($c->is_active()){
<li><a href="<% $c->out_url %>"><% $c->out_label %></a> <em>(<% $c->course->out_label %>)</em></li>
%		}
%	}
</ul>
% }
% else {
<p><em>no recently viewed content</em></p>
% }
</%method>


<%doc>
method to print the "school links" for the user's primary affiliation
</%doc>
<%method school_links>
<%args>
	$hp_section
</%args>
<%perl>

return if ($m->session->{'user'}->isGhost());
my $affiliation = $m->session->{'user'}->affiliation();
my $school = TUSK::Core::School->new->lookupReturnOne("school_name = '$affiliation'");
return unless defined $school;
</%perl>

<div class="homeSection">

<div class="toggled">

<& /tmpl/home:print_school_links, school => $school &>

</div>
</div>
</%method>


<%doc>
method to print the user's school's popular content 
</%doc>
<%method pop_content>
<%args>
	$user
</%args>
<%perl>
my @groups = $user->parent_user_groups;
</%perl>
% my $hot_content_count = 0;
% foreach my $group (@groups){
%	my @group_content = $group->hot_content();
%	if (scalar @group_content){
<ul>
%		foreach my $content (@group_content){
%			if ($content->is_active()){
<li><a href="/hsdb4/content/<% $content->primary_key %>"><% $content->out_label %></a> <em>(<% $content->course->out_label %>)</em></li>
%				$hot_content_count++;
%			}
%		}
</ul>
%	}
% }
% if (!$hot_content_count){
<p><em>no relevant content</em></p>
% }
</%method>


