</%doc>
<%method main_user_tabs>
<%args>
	$user
	$course_hash
	$schedule_ugs
	$today
	$upcoming
	$schools
</%args>

% my $counter = 0;

<nav class="toptabs">
<ul>
% 	foreach my $school (@$schools) {
	<li<% ($counter == 0) ? ' class="current"' : ''%>><a href="#schooltab<% $counter %>"><% $TUSK::Constants::Schools{$school}{'DisplayName'} %></a>
%	$counter++;
% }
</ul>
</nav>
% $counter = 0;
% foreach my $school (@$schools) {
%	my $calendar_tab;
%	if (($today->{$school} && scalar @{$today->{$school}}) || scalar @{$upcoming->{$school}}) {
%		$calendar_tab = 1;
%	}
