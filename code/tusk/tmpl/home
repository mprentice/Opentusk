<%once>
	use TUSK::SchoolLink::SchoolLink;
	use HSDB45::Announcement;
</%once>


<%method print_school_links>
<%args>
$school
</%args>

% my $links = $school->getHomepageSchoolLinks();

% if (scalar @$links) {
<ul class="gNoBullets">
%	foreach my $l (@$links) {
%		my $subLinks = $l->getJoinObjects('subLink'); 
%		if (scalar @$subLinks) {
<li class="closed"><h2><% $l->getLabel() %></h2><img src="/graphics/spacer.gif" class="more" alt="">
	<ul>
%			foreach my $sl (@$subLinks) {	
	<li><a href="<% $sl->getUrl() %>"><% $sl->getLabel() %></a></li>
%			}
	</ul>
</li>
%		}
%		else {
<li><a href="<% $l->getUrl() %>"><% $l->getLabel() %></a></li>
%		}
%	}
</ul>
% }
% else {
<em class="indented">no school links</em>
% }

</%method>


<%method school_announcements>
<%args>
	$user
</%args>
<%perl>
	my $all_announcements = $user->get_school_announcements();
</%perl>
% if (scalar @$all_announcements) {
<section class="notifications">
	<div class="close"><img src="/graphics/icon-home-close.png" alt=""></div>
	<div class="scrollcontainer">
%	foreach my $ann (@$all_announcements) {
		<article><% $ann->field_value('body') %></article>
% }
	</div>
</section>	
% }
</%method>


