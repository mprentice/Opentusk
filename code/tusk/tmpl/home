					<ul>
%			foreach my $course (@{$course_hash->{$school}{$tab}}) {
						<li><a href="<% ($tab eq "admin_courses") ? "/management/course/display/" : "/view/course/" %><% "$school/" . $course->primary_key() %>"><% $course->out_title() %></a></li>
%			}
					</ul>
