    var seconds = 5;
    function hideSavedDiv() {
      seconds--;
      if(document.getElementById('savedDiv')) {
        if(seconds == 0) {document.getElementById('savedDiv').style.display='none';}
        else             {setTimeout(hideSavedDiv, 1000);}
      }
    }
  </script>

