function removeHighlighting(theImage) {
	if(theImage.className != 'openedSubMenu') {theImage.className = '';}
}

function highlightButton(theImage) {
	if(theImage.className != 'openedSubMenu') {theImage.className = 'mouseOverIcon';}
}
