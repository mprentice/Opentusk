<%once>
	use HSDB4::SQLRow::Content;
</%once>

<%method leftnav>
<%perl>
        if($m->base_comp->attr('no_check_path')) {return undef;}
	my $type_object = $m->comp('/tmpl/url:get_type_object') or return undef;
	
	if ($type_object->isa('HSDB45::Course')){
		return '/tmpl/leftnav/course';
	}

	return undef;
</%perl>
</%method>

% $m->call_next();
