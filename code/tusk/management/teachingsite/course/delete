<%once>
	use TUSK::Constants;
</%once>

<%attr>
        hintmsg => 'Are you sure you want to delete this link?'
</%attr>

<%method title>
% return "Delete Site Link";
</%method>

<%shared>
	my $course = $m->comp("SELF:get_course_object");

	my $teaching_site_id = $m->comp("/tmpl/url:get_last_path_id");

        my $teaching_site = $m->comp("SELF:get_teaching_site_object", teaching_site_id => $teaching_site_id);
</%shared>

<& /tmpl/element:form, params => {
                method => 'POST',
                name => '' } &>

<& /tmpl/element:table, params => { width => "100%",
                border =>"0",
                cellspacing =>"0",
                cellpadding =>"0" } &>

<& /tmpl/element:field_display, params=>{ label=>'Site Name', value => $teaching_site->site_name() }&>

<& /tmpl/element:field_display, params=>{ label=>'Site City State', value => $teaching_site->site_city_state() }&>

<& /tmpl/element:save_button, params=>{label=>'Delete',
                cancel_onclick=>"go_back('" . $m->comp("/tmpl/url:construct_back_url", 'base_url' => "/management/teachingsite/course/show") . "');",
                name=>'submit'} &>
</table>
</form>

<%init>
if (defined($ARGS{'submit'})){
	$course->teaching_site_link()->delete(-user => $TUSK::Constants::DatabaseUsers->{ContentManager}->{readusername}, -password => $TUSK::Constants::DatabaseUsers->{ContentManager}->{readpassword}, -parent_id => $course->primary_key(), -child_id => $teaching_site->primary_key());
	$m->redirect($m->comp("/tmpl/url:construct_url", 'base_url' => "/management/teachingsite/course/show", 'msg' => "Course - Teaching Site Link Deleted"));
}
</%init>
