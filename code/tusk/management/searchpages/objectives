	use TUSK::Search::UserSearch;
	use Data::Dumper;
</%once>


<table cellspacing="5" width="100%">
	<tr>
		<td>
			<table>
				<tr>
					<td>
						<b>Objective: </b>&nbsp;
					</td>
					<td>
						<textarea name="search" class="textareawhite" cols="35" rows="3"></textarea>&nbsp;
