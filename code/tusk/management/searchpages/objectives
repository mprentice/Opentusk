% if ($ARGS{search}) {
	<tr>	
		<td><br>
% my $numResults = scalar(@{$results}); 
			<div id="count"><% $numResults %> matching entr<% ($numResults == 1)? "y" : "ies" %><% ($numResults)? ":" : "" %></div>
		</td>
