<%init>
  my $wholemessage = "\n$ARGS{message}";
 
  my $from = $TUSK::Constants::FeedbackEmail;
  if($ARGS{email} and $ARGS{email} =~ /\@/) {$from = $ARGS{email};}
  if($ARGS{sendemail})	{
    my %mail = (     To => "$TUSK::Constants::Institution{Email}",
                   From => $from ,
                Subject => $ARGS{topic}.'-'.$ARGS{subject},
                Message => $wholemessage
               );

    my $msg;
    if(my $err = Mail::Sendmail::sendmail(%mail)) {$msg = 0;}
    else                                          {Apache->warn($Mail::Sendmail::error);}
  }
</%init>


