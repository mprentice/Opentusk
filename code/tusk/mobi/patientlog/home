<%attr>
	check_cms_permissions => 0
	no_check_path => 1
</%attr>

<%once>	
	use HSDB4::SQLRow::User;
	use TUSK::FormBuilder::Form;
	use Data::Dumper;
</%once>

<div> Current patient logs:  </div>
% my $curr_num = scalar($curr_logs);
% if ($curr_num < 1 ) {
<div><b> No current patient logs available. </b></div><br>
%}
% foreach my $log (@$curr_logs) {

% if ($log->{title}) {
<h4> <% $log->{title} %> </h4>
% }

<ul  class="gNoBullets courseList">
<li><b> <% $log->{form_name} %> </b></li>
<li> <% $log->{time_period} %> </li>
<li> <% $log->{site_name} %> </li>
<li> <% $log->{actions} %> </li>
</ul>
<br>
% }

<div> Past patient logs: </div>

% my $prv_num = scalar ($prev_logs);
% if ($prv_num < 1 ) {
<div><b> No past patient logs available.</b> </div>
%}
% foreach my $log (@$prev_logs) {

% if ($log->{title}) {
<h4> <% $log->{title} %> </h4>
% }

<ul  class="gNoBullets courseList">
<li> <b><% $log->{form_name} %> </b></li>
<li> <% $log->{time_period} %> </li>
<li> <% $log->{site_name} %> </li>
<li> <% $log->{actions} %> </li>
</ul>
<br>
% }

<%init>
	my $patientlogs = $m->session->{'user'}->get_patient_logs();
	my $prev_title;
 	my $curr_logs;
	my $prev_logs;
	foreach my $log (@$patientlogs) {
	
		if ($log->{form_link}){
			push (@$curr_logs, $log);
			$log->{actions} = '<a class="navsm" href="/mobi/patientlog/entry/course/' . $log->{school_id} . '/' . $log->{course_id} . '/' . $log->{form_id} . '">Entry Form</a>&nbsp;&nbsp;|&nbsp;&nbsp;';
		}
		else {
			push (@$prev_logs, $log);
		}
		
		my $title = $log->{title};	
		my $form_name = $log->{form_name};

		$log->{actions} .= '<a class="navsm" href="/mobi/patientlog/reports/course/' . $log->{school_id} . '/' . $log->{course_id}  . '/' . $log->{form_id} .  '">Reports</a> &nbsp;&nbsp;|&nbsp;&nbsp;';

		$log->{actions} .="<a class=\"navsm\" href=\"/mobi/patientlog/view/$log->{school_id}/$log->{course_id}/$log->{form_id}/ \" >Description</a>";	
		$log->{title} = ($title eq $prev_title) ? '' : "$title";
		$prev_title = $title;

	}
</%init>

<%method red_header_text>
% 	return "Patient Log Homepage";
</%method>

<%method title>
% 	return "Patient Log Homepage";
</%method>