<%attr>
	check_cms_permissions => 0
	no_check_path => 1
</%attr>

<%once>
	use TUSK::FormBuilder::Form;
	use Data::Dumper;
</%once>

<h3> <% $form->getFormName %> </h3>
<p>
<% $form->getFormDescription %>
</p>

<p>
<a class="navsm" href="/mobi/patientlog/entry/course/<% $school_id %>/<% $course_id %>/<% $form_id %>">Entry Form</a> |
<a class="navsm" href="/mobi/patientlog/reports/course/<% $school_id %>/<% $course_id %>/<% $form_id %>">Reports</a>
</p>

<%init>

	my $id_array_ref = $m->comp('/tmpl/url:get_path_ids');
	# retrieve /school_id/course_id/form_id from url
	my $school_id = @$id_array_ref[0];
	my $course_id = @$id_array_ref[1];
	my $form_id   = @$id_array_ref[2];
	my $form = TUSK::FormBuilder::Form->new->lookupKey($form_id);

</%init>


<%method red_header_text>
% 	return "<a href='/mobi/patientlog/home'>Patient Log Homepage</a> > Form Description";
</%method>

<%method title>
% 	return "Patient Logs";
</%method>