<%args>
	$field
	$response
</%args>
% my $abbreviation = ($field->getAbbreviation()) ? '&nbsp;' . $field->getAbbreviation() : "";
<& "SELF:SingleSelect", field => $field, response => $response, extra_trailing_text => '' &>
</%method>


