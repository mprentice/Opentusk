<%init>
	unless (defined $params) {
		my ($day,$month,$year) = (localtime)[3,4,5];
		$year += 1900;
		$params->{to_date} = sprintf("%04d-%02d-%02d", $year,$month+1,$day);
		$params->{from_date} = '1999-01-01';
	}
