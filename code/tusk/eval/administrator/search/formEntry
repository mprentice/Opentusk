<tr><td align="right" valign="top">Beginning time period:</td><td>
<%perl>
	my $tp = HSDB45::TimePeriod->new(_school => $school);
	my @past_time_periods = $tp->lookup_all('end_date < curdate()', 'ORDER BY end_date DESC');
	my @current_time_periods = $tp->lookup_all('end_date >= curdate()', 'ORDER BY end_date DESC');

	my @time_periods = ();
	push @time_periods, { value => '', label => '', class=> 'xsm'  };

	if (@current_time_periods) {
		push @time_periods, { value => '', label => '------ Current Time Periods ------', class=> 'xsm' };
	}

	foreach (@current_time_periods) {
		push @time_periods, { 
			value  => $_->primary_key(),
			label  => $_->field_value('period') . ', ' 
				. $_->field_value('academic_year') 
				. ' (' 
				. $_->field_value('start_date') . ' to ' 
				. $_->field_value('end_date') 
				. ')',
			class	=> 'xsm'
		};
	}

	push @time_periods, { value => '', label => '', class=> 'xsm'  };
	push @time_periods, { value => '', label => '------ Past Time Periods ------', class=> 'xsm'  } if (@past_time_periods);
	foreach (@past_time_periods) {
		push @time_periods, { 
			value  => $_->primary_key(),
			label  => $_->field_value('period') . ', ' 
				. $_->field_value('academic_year') 
				. ' (' 
				. $_->field_value('start_date') . ' to ' 
				. $_->field_value('end_date') 
				. ')' ,
			class	=> 'xsm'
		};
	}

</%perl>

<& /tmpl/element:dropdown, params => { 
	name		=> 'start_time_period_id',
	class		=> 'xsm',
	no_table	=> 1,
	options		=> \@time_periods,
	selected	=> $params->{start_time_period_id}
} &>
</td></tr>
