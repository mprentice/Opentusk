<%method args2string>
<%perl>
	my @paramStrings = ();
	foreach my $key (keys %args) {
		if (ref($args{$key}) eq 'ARRAY') {
			foreach (@{$args{$key}}) {
				push @paramStrings, "$key=$_";
			}
		} else {
			push @paramStrings, "$key=$args{$key}";
		}
	}

	return join('&', @paramStrings);
</%perl>
</%method>

