<%once>
	use HSDB45::Eval::Results::BarGraph;
	use HSDB45::Eval::Results::Formatter;
</%once>
<%attr>
	no_header	=> 1
	docType		=> 'simpleType4'
</%attr>
<%method stylearray>
%	return '/style/grapher.css';
