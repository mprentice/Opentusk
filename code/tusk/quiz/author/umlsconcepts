<%once>
	use TUSK::Core::LinkContentKeyword;
	use TUSK::UMLS::UmlsConceptMention;
	my @rank_options = ();


	my $rank_counter = 0;

	push @rank_options, 
    		map { 'label' => $_,
			          'value' => $rank_counter++ }, 
			     ( 'N/A', 'Mentioned', 'Central' );
</%once>
<%shared>

	my $question_id = $m->comp('/tmpl/url:get_last_path_id');
	my $ids = $m->comp('/tmpl/url:get_path_ids');
	my $quiz_id = $ids->[0];

    my $linkquestion = TUSK::Quiz::LinkQuizQuizItem->new->lookup("quiz_id = $quiz_id AND quiz_item_id = $question_id ");
	my $linkquestion_id;
	if($linkquestion) {
   		 $linkquestion_id = $linkquestion->[0]->{'_id'}; 
	}

	my $back_url;
	$back_url =$m->comp("/tmpl/url:construct_url", 'base_url'=>"/quiz/author/questionaddedit");
   
</%shared>

<%method jsarray>
% return ['layers.js'];
</%method>


<%method title>
<%perl>
	return 'UMLS Concepts';
</%perl>
</%method>

<%method red_header_text>
% return $m->comp('SELF:title');
</%method>

<%method startup>
<%args>
	$args
</%args>
<%perl>
	if ($args->{'submit_check'}){
		$m->comp("SELF:set_msg", msg => "UMLS Concepts for this content have been updated");
	}
</%perl>
</%method>


