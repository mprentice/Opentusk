<& /tmpl/element:textarea, params=>{ 
			label	 	=> 'Question&nbsp;Body',
	                name		=> "body",
       	         	cols		=> "80",
       	 	       	rows		=> "6",
                	value		=> $question->getBody()  
		} &>

% if ($question->getType() ne "Section"){
