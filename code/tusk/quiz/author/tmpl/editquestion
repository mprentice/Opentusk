<%perl>
	if ($question->getType() eq 'MultipleChoice' or $question->getType() eq 'Matching'){
		unless ($question->getPrimaryKeyID()){
			$m->print('<script language="JavaScript">');
			for (scalar(@answers_data)..4) {
				$m->print("addDefaultToLayer();");
			 }
			$m->print("</script>");
		}
	}
</%perl>
