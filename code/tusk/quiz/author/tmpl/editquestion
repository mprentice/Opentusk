% } else {
<& /tmpl/element:dropdown, params=>{ label => 'Question&nbsp;Type',
                name=>"question_type",
                onchange=>"populate_answers('$formname');",
                selected=>$question->getType() ,
                options=>$m->comp('/quiz/author/tmpl/process:question_type_data',include_empty=>1)} &>
