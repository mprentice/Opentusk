	cellpadding 	=> "0" 
} &>

<& /tmpl/element:form, params => { 
	method => 'POST',
	name => 'emailform',} &>

<& SELF:course_time_periods &>

<& /tmpl/element:table, params => { 
	width => "100%",
	border =>"0",
	cellspacing =>"0",
	cellpadding =>"0" } &>

<& /tmpl/element:field_display, params => { 
