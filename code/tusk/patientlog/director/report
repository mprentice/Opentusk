<%method showHideButtonRow>
<%args>
	$columns
</%args>
<tr><td colspan="<% $columns+1 %>" align="right" style="">
<& /tmpl/element:button, params => {
			class		=> 'formbutton',
			onclick		=> "showHideRows(this)",
			label		=> "Show 'Should See' only", 
			name		=> 'showhiderows'} &>
</td></tr>
</%method>


