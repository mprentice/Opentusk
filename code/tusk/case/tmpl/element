<%shared>
	my @classArray = ('simEven','simOdd');
	my $rowCount = 0; 
</%shared>

<%method header_bar>
<%args>
	$label
</%args>
<tr><td colspan="2">
<& /tmpl/element:table, params=>{width=>"100%"} &>
<tr class="header1"><td width="1%" valign="top"><img src="/graphics/reverseLeft.gif" /></td><td style="padding-left : 3px" ><% $label %></td></tr>
</table>
</td></tr>
</%method>

<%method divider_bar>
