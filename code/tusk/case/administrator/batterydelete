<%once>
	use TUSK::Case::Battery;
</%once>

<%shared>
 my $id = $m->comp("/tmpl/url:get_first_path_id");
</%shared>

<%attr>
hintmsg => __('Deleting will also delete any associated tests and sub tests');
</%attr>

<%method title>
% return __("Delete Category");
</%method>

<%perl>
my $battery = TUSK::Case::Battery->lookupKey($id);
if (!defined($battery->getPrimaryKeyID())){
	$m->comp("/case/tmpl/error",msg=>__x("Category {id} not found", id => $id));
}

</%perl>
<& /tmpl/element:form, params => { 
                method => 'POST',
                name => 'batterydelete',
                onsubmit => undef } &>

<& /tmpl/element:table, params => { width => "100%",
                border =>"0",
                cellspacing =>"0	",
                cellpadding =>"0" } &>

<& /tmpl/element:field_display, params=>{'label'=>__('Category Name'),
		'value'=>$battery->getBatteryTitle()} 
		&>

<& /tmpl/element:save_button,params=>{name=>'delete_battery', 
					label=>__('Delete Category'),
					cancel_onclick=>'go_back(\'' . $back_url . '\');'} &>
</form>
</table>

<%init>
my $type_path = $m->comp('/tmpl/url:get_type_path');
my $back_url = "/case/administrator/batteryshow/$type_path";

if (defined($ARGS{'delete_battery'})){
	my $battery = TUSK::Case::Battery->lookupKey($id);
	
	my $exams = $battery->getChildTests();
	
	foreach my $exam (@$exams){
		my $tests = $exam->getSubTests();
			
		foreach my $test (@$tests){
			$test->delete();
		}
		
		$exam->delete();
	}
	
	$battery->delete();
	$m->redirect($back_url . "?msg=".__("Category successfully deleted"));
}
</%init>
