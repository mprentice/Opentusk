<%method get_preview_text>
<%args>
	$case
</%args>
<%perl>
	$case->setUser($m->comp('SELF:user'));
	my $report = $case->getReport();
	return ($report->getPreviewFlag()) ? ' - ('.__('PREVIEW').')' : '';
</%perl>
</%method>

