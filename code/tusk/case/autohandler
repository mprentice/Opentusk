<%method footer>
<%args>
$obj
</%args>
<br>
<table>
<tr>
	<td class="xxsm">
		<b><%__("Created By")%>:</b>
	</td>
	<td class="xxsm">
		 <% $obj->getCreatedBy() %> (<i><% $obj->getCreatedOn() %></i>)</font>
	</td>
</tr>
<tr>
	<td class="xxsm">
		<b><%__("Changed By")%>:</b>
	</td>
	<td class="xxsm">
		<% $obj->getModifiedBy() %> (<i><% $obj->getModifiedOn() %></i>)</font>
	</td>
</tr>
</table>
</%method>


