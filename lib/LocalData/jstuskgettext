#!/bin/bash

#if [ -z $1 -o -z $2 ]; then
if [ -z $1 ]; then
	#echo "Usage: tuskgettext [listfile] [outfile]"
	echo "Usage: tuskgettext [outfile]"
	echo
	exit
fi

#Original:
# xgettext -L Perl -k__ -k__x -k__n -k__nx -k__xn -k__p -k__px -k__np -k__npx -f $1 -o $2

#find -type f | xargs xgettext -L Perl -k__ -k__x -f $1 -o $2
find -type f > fileslist.txt 
#xgettext -L Perl -k__ -k__x -o $1 -f fileslist.txt
xgettext --strict -L Python -k_ -k_x -o $1 -f fileslist.txt
