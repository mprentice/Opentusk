#!/bin/bash

#if [ -z $1 -o -z $2 ]; then
if [ -z $1 ]; then
	#echo "Usage: tuskgettext [listfile] [outfile]"
	echo "Usage: tuskgettext [outfile]"
	echo
	exit
fi

#Original:
# xgettext -L Perl -k__ -k__x -k__n -k__nx -k__xn -k__p -k__px -k__np -k__npx -f $1 -o $2

find ../../lib ../../code -type f | grep -vE "(\.git|\/log|mason_cache|\.mo)" > fileslist.txt 
xgettext --from-code=utf-8 --strict -L Python -k__ -k__x -o $1 -f fileslist.txt
